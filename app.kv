<ContentNavigationDrawer>
    ScrollView:

        MDList:

            OneLineListItem:
                text: "Home Screen"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "home"

            OneLineListItem:
                text: "Extrusion"
                on_press:
                    root.nav_drawer.set_state("close")
                    #root.screen_manager.transition.FallOutTransition()
                    root.screen_manager.current = "extrusion"

            OneLineListItem:
                text: "Flow"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "flow"


MDScreen:

    MDTopAppBar:
        pos_hint: {"top": 1}
        elevation: 4
        title: "3-D Hot End Calculator"
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
        right_action_items: [["exit-to-app", lambda x: app.stop()]]
        halign: "center"

    MDNavigationLayout:

        MDScreenManager:
            id: screen_manager
            #transition: MDFadeSlideTransition(duration=1)

            MDScreen:
                name: "home"
                # MDBoxLayout:
                #     orientation: "vertical"
                    
                MDLabel:
                    font_style: "H3"
                    text: "Welcome to your Hot End Calculator"
                    theme_text_color: "Custom"
                    #text_color: .077,1,1,1
                    text_color: app.theme_cls.primary_color
                    halign: "center"
                    pos_hint: {"center_x": .5, "center_y": .55}

                MDLabel:
                    font_style: "H4"
                    text: "Pick an option from the side menu"
                    theme_text_color: "Custom"
                    text_color: app.theme_cls.primary_light
                    halign: "center"
                    pos_hint: {"center_x": .5, "center_y": .4}

                # FloatLayout:
                #     Image:
                #         pos_hint: {"center_x": .5, "center_y": .7}
                #         source: "assets/back2future.gif"
                #         allow_stretch: True
                #         anim_delay: .1
                #         anim_reset: True
                    

            MDScreen:
                name: "extrusion"

                MDLabel:
                    font_style: "H3"
                    text: "Calculate Extrusion"
                    theme_text_color: "Custom"
                    #text_color: 1, 163/255, 26/255, 1
                    text_color: app.theme_cls.primary_color
                    halign: "center"
                    pos_hint: {"center_x": .5, "center_y": .8}

                MDTextField:
                    id: extrude_dist
                    hint_text: "Enter extruded filament"
                    helper_text: "Measurent of filament from original marks before minus after"
                    helper_text_mode: "on_focus"
                    required: True
                    pos_hint: {"center_x": .5, "center_y": .4}
                    font_size: 30
                    size_hint_x: .8
                    
                MDTextField:
                    id: prev_rotation
                    hint_text: "Enter current rotation distance"
                    helper_text: "This is the previous rotation distance"
                    helper_text_mode: "on_focus"
                    required: True
                    pos_hint: {"center_x": .5, "center_y": .6}
                    font_size: 30
                    size_hint_x: .8
                    #right_action_items: [["magnify", lambda x: callback(x)]]

                

                MDIconButton:
                    icon: "magnify"
                    pos_hint: {"center_x": .85, "center_y": .4}
                    pos: prev_rotation.width - self.width + dp(8), 0
                    theme_text_color: "Hint"
                    on_release: 
                        root.ids.screen_manager.current = "extrusion_gif"
                        #app.callback()
                        #print("magnify_released")
                        

                MDRectangleFlatButton:
                    id: calc_extrusion
                    text: "Calculate Extrusion"
                    pos_hint: {"center_x": 0.5, "center_y": 0.2}
                    on_release: 
                        app.calc_extrusion()

                MDRectangleFlatButton:
                    id: clear_field
                    text: "Clear"
                    theme_text_color: "Custom"
                    text_color: "white"
                    line_color: "white"
                    pos_hint: {"center_x": 0.5, "center_y": 0.1}
                    on_release: 
                        app.clear_extrusion_field_btn()

            MDScreen:
                name: "extrusion_gif"
                #id: extrusion_gif_screen

                FloatLayout:
                    Image:
                        pos_hint: {"center_x": .5, "center_y": .5}
                        #source: "assets/back2future.gif"
                        source: "assets/back2future.gif"
                        allow_stretch: True
                        anim_delay: .1
                        anim_reset: True


                MDRectangleFlatButton:
                    text: "Back"
                    theme_text_color: "Custom"
                    text_color: "white"
                    line_color: "white"
                    pos_hint: {"center_x": .5, "center_y": .2}
                    on_release: 
                        #root.screen_manager.transition.MDFadeSlideTransition
                        root.ids.screen_manager.current = "extrusion"
                    


            MDScreen:
                name: "flow"

                MDLabel:
                    font_style: "H3"
                    text: "Calculate Flow"
                    theme_text_color: "Custom"
                    #text_color: 1, 163/255, 26/255, 1
                    text_color: app.theme_cls.primary_color
                    halign: "center"
                    pos_hint: {"center_x": .5, "center_y": .8}

                MDTextField:
                    id: prev_flow_wall
                    hint_text: "Enter current flow"
                    helper_text: "This is the previous flow percentage"
                    helper_text_mode: "on_focus"
                    required: True
                    pos_hint: {"center_x": .5, "center_y": .6}
                    font_size: 30
                    size_hint_x: .8

                MDTextField:
                    id: flow_wall
                    hint_text: "Enter current measured wall"
                    helper_text: "This is the current measurement needing adjustment"
                    helper_text_mode: "on_focus"
                    required: True
                    pos_hint: {"center_x": .5, "center_y": .4}
                    font_size: 30
                    size_hint_x: .8

                MDIconButton:
                    icon: "magnify"
                    pos_hint: {"center_x": .85, "center_y": .4}
                    pos: flow_wall.width - self.width + dp(8), 0
                    theme_text_color: "Hint"
                    on_release: 
                        root.ids.screen_manager.current = "flow_gif"
                        #print("magnify_released")
                    

                MDRectangleFlatButton:
                    id: calc_flow
                    text: "Calculate Flow"
                    pos_hint: {"center_x": 0.5, "center_y": 0.2}
                    on_release: 
                        app.calc_flow()

                MDRectangleFlatButton:
                    id: clear_field
                    text: "Clear"
                    theme_text_color: "Custom"
                    text_color: "white"
                    line_color: "white"
                    pos_hint: {"center_x": 0.5, "center_y": 0.1}
                    on_release: 
                        app.clear_flow_field_btn()

            MDScreen:
                name: "flow_gif"
                id: flow_gif_screen
                
                FloatLayout:
                    Image:
                        pos_hint: {"center_x": .5, "center_y": .5}
                        source: "assets/jacks_supercomp.jpg"
                        #anim_delay: -1
                        allow_stretch: True
                        anim_delay: .1
                        anim_reset: True

                MDRectangleFlatButton:
                    text: "Back"
                    theme_text_color: "Custom"
                    text_color: "white"
                    line_color: "white"
                    pos_hint: {"center_x": .5, "center_y": .2}
                    on_release: 
                        root.ids.screen_manager.current = "flow"

        MDNavigationDrawer:
            id: nav_drawer
            type: "modal"
            orientation: 'vertical'
            padding: 16, 10, 10, 16
            radius: (0, 16, 16, 0)
            

            #MDNavigationDrawerMenu:

            MDNavigationDrawerHeader:
                title: "Calculator Selection"
                title_color: "#4dffff"
                text: "select one"
                spacing: "4dp"
                padding: "12dp", "32dp", "12dp", "12dp"
                #padding: 12,56,8,160
                Image:
                    source: "assets/3DNozzle_app.png"
                    #source: "assets/back2future.gif"
                    #size_hint: .6, .6
                    size_hint: None, None
                    size: "90dp", "90dp"
                

            ContentNavigationDrawer:
                screen_manager: screen_manager
                nav_drawer: nav_drawer
                padding: 6, 48, 6, 10
                
            